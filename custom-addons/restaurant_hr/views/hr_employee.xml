<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_view_employee_form_inherit" model="ir.ui.view">
        <field name="name">hr.employee.view_employee_form_inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='job_title']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>

            <xpath expr="//field[@name='department_id']" position="replace">
                <field name="department_id" readonly="1" />
            </xpath>

            <xpath expr="//field[@name='coach_id']" position="replace">
                <field name="coach_ids" options="{'no_create': True}" widget="many2many_avatar_employee" />
            </xpath>

            <xpath expr="//field[@name='passport_id']" position="after">
                <field name="passport_type" />
                <field name="passport_series" />
                <field name="passport_issue_date" />
                <field name="passport_issue_by" />
            </xpath>

            <xpath expr="//field[@name='work_email']" position="after">
                <field name="entry_date" />
            </xpath>

            <xpath expr="//header/button[1]" position="replace"></xpath>

            <xpath expr="//header" position="inside">
                <button type="object" name="assess_employee" string="Assess Employee" class="oe_highlight" />
                <button type="object" name="import_employee_data" string="Import Employees" class="oe_highlight" groups="base.group_no_one" />
            </xpath>

            <xpath expr="//page[@name='hr_settings']" position="after">
                <page name="apprisals" string="Apprisals" groups="survey.group_survey_user">
                    <group>
                        <field name="response_ids" nolabel="1">
                            <tree create="0" edit="0">
                                <field name="survey_id" />
                                <field name="partner_id" string="Appraiser" />
                                <field name="scoring_percentage" />
                                <field name="scoring_total" />
                                <field name="scoring_success" />
                                <field name="bonuse_percentage" widget="percentage" />
                                <field name="state" widget="badge" />
                                <button string="Proceed Survey" name="proceed_survey" type="object" class="oe_highlight" attrs="{'invisible': [('state', '=', 'done')]}" />
                                <button string="See Results" name="see_results" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'done')]}" />
                            </tree>
                            <form>
                                <group>
                                    <field name="survey_id" readonly="1" />
                                    <field name="partner_id" string="Appraiser" readonly="1" />
                                    <field name="scoring_percentage" readonly="1" />
                                    <field name="scoring_total" readonly="1" />
                                    <field name="scoring_success" readonly="1" />
                                    <field name="bonuse_percentage" widget="percentage" />
                                    <field name="state" readonly="1" />
                                </group>

                            </form>
                        </field>
                    </group>
                </page>
            </xpath>

            <xpath expr="//group[@name='identification_group']" position="replace"></xpath>
            <xpath expr="//group[@name='managers']" position="replace">
                <group name="functional_duty" string="Functional Duty">
                    <field name="functional_duty" nolabel="1" />
                </group>
            </xpath>
        </field>
    </record>

    <record id="hr_view_employee_form_inherit_group_hr_manager" model="ir.ui.view">
        <field name="name">hr.employee.view_employee_form_inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="groups_id" eval="[(6, 0, [ref('hr.group_hr_manager')])]" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='department_id']" position="replace">
                <field name="department_id" />
            </xpath>
        </field>
    </record>

    <record id="hr_employee_view_form_inherit" model="ir.ui.view">
        <field name="name">hr.employee.hr_employee_view_form_inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_skills.hr_employee_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('row')]" position="before">
                <div class="row">
                    <div class="col-lg-12">
                        <label for="resume_pdf" />
                        <field name="resume_pdf" />
                    </div>
                </div>
                <div class="o_horizontal_separator">Detailed Resume/Skills</div>
            </xpath>
        </field>
    </record>

    <record id="hr_gamification_hr_hr_employee_view_form" model="ir.ui.view">
        <field name="name">hr_gamification.hr_hr_employee_view_form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_gamification.hr_hr_employee_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='received_badges']" position="replace"></xpath>
        </field>
    </record>

    <record id="employee_view_search" model="ir.ui.view">
        <field name="name">hr.employee.view.search</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_filter" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="employee_type" />
                <field name="mobile_phone" string="Phone" filter_domain="['|', ('mobile_phone', 'ilike', self), ('work_phone', 'ilike', self)]" />
                <field name="work_email" string="Email" filter_domain="[('work_email', 'ilike', self)]" />
                <field name="department_id" />
            </xpath>

            <xpath expr="//filter[@name='inactive']" position="after">
                <separator />
                <filter string="Employee" name="employee_type_employee" domain="[('employee_type', '=', 'employee')]" />
                <filter string="Student" name="employee_type_student" domain="[('employee_type', '=', 'student')]" />
                <filter string="Trainee" name="employee_type_trainee" domain="[('employee_type', '=', 'trainee')]" />
                <filter string="Contractor" name="employee_type_contractor" domain="[('employee_type', '=', 'contractor')]" />
                <filter string="Freelance" name="employee_type_freelance" domain="[('employee_type', '=', 'freelance')]" />
            </xpath>

            <xpath expr="//filter[@name='group_manager']" position="after">
                <filter name="employee_type" string="Employee Type" domain="[]" context="{'group_by': 'employee_type'}" />
            </xpath>
        </field>
    </record>

    <record id="hr.act_employee_from_department" model="ir.actions.act_window">
        <field name="context">{
            "searchpanel_default_department_id": active_id
        }
        </field>
    </record>

    <record id="employee_payment_rate_view_tree" model="ir.ui.view">
        <field name="name">employee_payment_rate.view.tree</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <tree editable="bottom" create="0" delete="0">
                <field name="name" readonly="1" />
                <field name="payment_rate" />
                <field name="department_id" readonly="1" />
                <field name="job_id" readonly="1" />
                <field name="parent_id" readonly="1" />
            </tree>
        </field>
    </record>

    <record id="employee_payment_rate_action" model="ir.actions.act_window">
        <field name="name">Employee Payment Rate</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="employee_payment_rate_view_tree" />
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record id="hr.open_view_employee_list_my" model="ir.actions.act_window">
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'kanban', 'view_id': ref('hr.hr_kanban_view_employees')}),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('hr.view_employee_tree')}),
                (0, 0, {'view_mode': 'activity', 'view_id': ref('hr.hr_employee_view_activity')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('hr.view_employee_form')})]" />
    </record>

</odoo>