<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="employee_card_view_form" model="ir.ui.view">
        <field name="name">employee_card.view.form</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <form edit="0" create="0" delete="0">
                <style>
                    .emp_card-photo-container img{
                    width: 100%;
                    }
                </style>
                <field name="company_id" invisible="1" />
                <field name="department_id" invisible="1" />
                <div
                    style="
                    width: 100%;
                    background-color: rgb(204, 207, 207); 
                    padding-bottom: 2%; 
                    overflow: auto; 
                    touch-action: all;">
                    <div
                        style="
                            display: flex;
                            margin: 0 auto;
                            width: 98%;
                            background-color: white;
                            padding: 1% 1% 0 1%;

                            transform-origin: 0 0;
                            transform: scale(1);
                            transition: transform 0.2s ease-out;
                        "
                    >
                        <div
                            style="
                                display: flex;
                                flex-direction: column;
                                width: 25%; 
                                background-color: rgb(147, 149, 152);
                            ">
                            <field
                                class="emp_card-photo-container"
                                name="image_1920"
                                style="
                                    display: block; 
                                    width: 97%; 
                                    margin: 1.5% auto 0 auto;
                                    border: 0.4vw solid white; 
                                "
                                widget="image" />
                            <div style="margin: 15% 0 0 10%;">
                                <div class="d-flex flex-column">
                                    <span
                                        style="width: 100%; color: white; font-size: 1.3vw; font-weight: bold;">
                                        Дата Рождения:
                                    </span>
                                    <span
                                        style="width: 100%;height: 0.4vw;background-color: rgb(235, 189, 8);"
                                    ></span>
                                    <span class="d-flex justify-content-between"
                                        style="width: 100%; padding-top: 3%">
                                        <img
                                            style="width: 3vw; height: 3vw; margin-right: 3%"
                                            alt="birthday"
                                            src="restaurant_hr/static/src/img/birthday-icon.jpg"
                                        />
                                        <span class="d-flex flex-column"
                                            style="
                                                width: 84%; overflow: hidden; text-overflow: ellipsis;
                                                    margin-bottom: 0px;
                                                    color: white; font-size: 1.1vw; vertical-align: middle">

                                            <field name="birthday" style="margin-bottom: 0px;" />
                                            <span>
                                                <field name="place_of_birth" /> (<field
                                                    name="country_of_birth"
                                                    options="{'no_open': True}" />) </span>
                                        </span>
                                    </span>
                                </div>

                                <div class="d-flex flex-column" style="margin-top: 10%;">
                                    <span
                                        style="width: 100%; color: white; font-size: 1.3vw; font-weight: bold;">
                                        Адрес:
                                    </span>
                                    <span
                                        style="width: 100%;height: 0.4vw;background-color: rgb(235, 189, 8);"
                                    ></span>
                                    <span class="d-flex justify-content-between"
                                        style="width: 100%; padding-top: 3%">
                                        <i class="fa fa-home"
                                            style="width: 3vw; height: 3vw; margin-right: 3%; color: white; font-size: 3vw;"
                                        />
                                        <field name="display_address"
                                            style="width: 84%; overflow: hidden; text-overflow: ellipsis;
                                                    margin-bottom: 0px;
                                                    color: white; font-size: 1.1vw; vertical-align: middle; margin-bottom: 0px;"
                                            options="{'no_open': True}" />
                                    </span>
                                </div>

                                <div class="d-flex flex-column" style="margin-top: 10%;">
                                    <span
                                        style="width: 100%; color: white; font-size: 1.3vw; font-weight: bold;">
                                        Семейное положение:
                                    </span>
                                    <span
                                        style="width: 100%;height: 0.4vw;background-color: rgb(235, 189, 8);"
                                    ></span>
                                    <span class="d-flex justify-content-between"
                                        style="width: 100%; padding-top: 3%">
                                        <i class="fa fa-users"
                                            style="width: 3vw; height: 3vw; margin-right: 3%; color: white; font-size: 3vw;"
                                        />
                                        <span class="d-flex flex-column"
                                            style="
                                                width: 84%; overflow: hidden; text-overflow: ellipsis;
                                                    margin-bottom: 0px;
                                                    color: white; font-size: 1.1vw; vertical-align: middle">

                                            <field name="marital" style="margin-bottom: 0px;" />
                                            <span attrs="{'invisible': [('children', '=', False)]}">
                                                <span attrs="{'invisible': [('children', '=', 1)]}">
                                                    (<field name="children" /> детей) </span>
                                                <span attrs="{'invisible': [('children', '>', 1)]}">
                                                    (<field name="children" /> ребёнок) </span>
                                            </span>
                                        </span>
                                    </span>
                                </div>

                                <div class="d-flex flex-column" style="margin-top: 10%;">
                                    <span
                                        style="width: 100%; color: white; font-size: 1.3vw; font-weight: bold;">
                                        Образование:
                                    </span>
                                    <span
                                        style="width: 100%;height: 0.4vw;background-color: rgb(235, 189, 8);"
                                    ></span>
                                    <span class="d-flex justify-content-between"
                                        style="width: 100%; padding-top: 3%">
                                        <i class="fa fa-certificate"
                                            style="width: 3vw; height: 3vw; margin-right: 3%; color: white; font-size: 3vw;"
                                        />
                                        <span class="d-flex flex-column"
                                            style="
                                                width: 84%; overflow: hidden; text-overflow: ellipsis;
                                                    margin-bottom: 0px;
                                                    color: white; font-size: 1.1vw; vertical-align: middle">

                                            <span
                                                attrs="{'invisible': [('certificate', '=', False)]}">
                                                <field name="certificate"
                                                    style="margin-bottom: 0px;" />
                                            </span>

                                            <span
                                                attrs="{'invisible': [('study_field', '=', False)]}">
                                                <field name="study_field"
                                                    style="margin-bottom: 0px;" />
                                            </span>

                                            <span
                                                attrs="{'invisible': [('study_school', '=', False)]}">
                                                Школа: <field name="study_school"
                                                    style="margin-bottom: 0px;" />
                                            </span>

                                        </span>
                                    </span>
                                </div>

                                <div class="d-flex flex-column" style="margin-top: 10%;">
                                    <span
                                        style="width: 100%; color: white; font-size: 1.3vw; font-weight: bold;">
                                        Увлечения:
                                    </span>
                                    <span
                                        style="width: 100%;height: 0.4vw;background-color: rgb(235, 189, 8);"
                                    ></span>
                                    <span class="d-flex justify-content-between"
                                        style="width: 100%; padding-top: 3%">
                                        <i class="fa fa-puzzle-piece"
                                            style="width: 3vw; height: 3vw; margin-right: 3%; color: white; font-size: 3vw;"
                                        />
                                        <field name="hobbies"
                                            style="width: 84%; overflow: hidden; text-overflow: ellipsis;
                                                    margin-bottom: 0px;
                                                    color: white; font-size: 1.1vw; vertical-align: middle; margin-bottom: 0px;"
                                            options="{'no_open': True}" />
                                    </span>
                                </div>

                                <div class="d-flex flex-column" style="margin-top: 10%;">
                                    <span
                                        style="width: 100%; color: white; font-size: 1.3vw; font-weight: bold;">
                                        E-mail:
                                    </span>
                                    <span
                                        style="width: 100%;height: 0.4vw;background-color: rgb(235, 189, 8);"></span>
                                    <span style="width: 100%; padding-top: 3%">
                                        <img
                                            style="width: 13%; margin-right: 3%"
                                            alt="birthday"
                                            src="restaurant_hr/static/src/img/email-icon.jpg"
                                        />
                                        <field name="work_email"
                                            style="width: 84%; overflow: hidden; text-overflow: ellipsis;
                                                margin-bottom: 0px;
                                                color: white; font-size: 1.1vw; vertical-align: middle" />
                                    </span>
                                </div>

                                <div class="d-flex flex-column" style="margin-top: 10%;">
                                    <span
                                        style="width: 100%; color: white; font-size: 1.3vw; font-weight: bold;">
                                        Мобильный:
                                    </span>
                                    <span
                                        style="width: 100%; height: 0.4vw; background-color: rgb(235, 189, 8);"></span>
                                    <span style="width: 100%; padding-top: 3%">
                                        <img
                                            style="width: 13%; margin-right: 3%"
                                            alt="birthday"
                                            src="restaurant_hr/static/src/img/phone-icon.jpg"
                                        />
                                        <field name="mobile_phone"
                                            style="width: 84%; overflow: hidden; text-overflow: ellipsis;
                                                margin-bottom: 0px; color: white; font-size: 1.1vw; 
                                                vertical-align: middle" />
                                    </span>
                                </div>

                                <div class="d-flex flex-column"
                                    style="margin-top: 10%; margin-bottom: 30%;">
                                    <span
                                        style="width: 100%; color: white; font-size: 1.3vw; font-weight: bold;">
                                        Работает с:
                                    </span>
                                    <span
                                        style="width: 100%; height: 0.4vw; background-color: rgb(235, 189, 8);"></span>
                                    <span style="width: 100%; padding-top: 3%">
                                        <img
                                            style="width: 13%; margin-right: 3%"
                                            alt="birthday"
                                            src="restaurant_hr/static/src/img/calendar-icon.jpg"
                                        />
                                        <field name="entry_date"
                                            style="width: 84%; overflow: hidden; text-overflow: ellipsis;
                                                margin-bottom: 0px; color: white; font-size: 1.1vw; 
                                                vertical-align: middle" />
                                    </span>
                                </div>
                            </div>
                            <div class="d-flex mt-auto mb-3" groups="hr.group_hr_user">
                                <button class="btn btn-primary btn-warning mx-auto" type="object"
                                    name="open_extended_form"
                                    style="width: 95%; font-size: 1.3vw; font-weight: bold;">
                                    Расширенная Карточка
                                </button>
                            </div>
                        </div>
                        <div style="width: 75%; margin-top: 3%; margin-left: 3%;">
                            <div class="d-flex">
                                <div style="display: flex; flex-direction: column;">
                                    <span
                                        style="font-size: 2vw; font-weight: bold; width: 100%">
                                        <field name="name" />
                                    </span>
                                    <span
                                        style="font-size: 1.1vw; font-weight: 500; width: 100%">
                                        <field name="job_id" options="{'no_open': True}" />
                                    </span>
                                    <span
                                        attrs="{'invisible': [('qualification_id', '=', False)]}"
                                        style="font-size: 1.1vw; font-weight: 500; width: 100%">
                                        <field name="branch_id" invisible="1" />
                                        <field name="qualification_id" options="{'no_open': True}" />
                                    </span>
                                    <span
                                        style="font-size: 1.1vw; font-weight: 500; width: 100%">
                                        <field name="department_id" options="{'no_open': True}" />
                                    </span>
                                </div>
                                <img
                                    class="img img-fluid"
                                    alt="andys-logo"
                                    style="width: 12%;height: 16.8%;margin-right: 2%;margin-left: auto;"
                                    src="restaurant_hr/static/src/img/andys-logo.jpg"
                                />
                                <img
                                    class="img img-fluid"
                                    alt="laplacinte-logo"
                                    style="width: 12%; height: 24%; padding-top: 2%;"
                                    src="restaurant_hr/static/src/img/la-placinte-logo.jpg"
                                />
                            </div>
                            <div
                                style="width: 100%;height: 0.5vw;margin-top: 0.5vw; background-color: rgb(235, 189, 8);"></div>

                            <field name="employee_card_json"
                                style="width: 100%; margin-bottom: 5%;"
                                widget="employee_card_widget" />

                        </div>
                    </div>
                </div>
            </form>
        </field>
    </record>

    <record id="hr_view_employee_form_inherit" model="ir.ui.view">
        <field name="name">hr.employee.view_employee_form_inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='job_title']" position="attributes">
                <attribute name="readonly">1</attribute>
                <attribute name="force_save">1</attribute>
            </xpath>

            <xpath expr="//field[@name='department_id']" position="replace">
                <field name="department_id" readonly="1" />
            </xpath>

            <!-- Ensure that users are not able to fast create the job and user even HR Settings are
            hidden -->
            <xpath expr="//field[@name='job_id']" position="replace">
                <field name="job_id" options="{'no_create': True}" />
            </xpath>
            <!--  -->

            <xpath expr="//field[@name='parent_id']" position="replace">
                <field name="parent_id" options="{'no_create': True}" />
                <field name="job_id" options="{'no_create': True}" required="1" string="Job/Vacancy" />
                <field name="employee_type" />
            </xpath>


            <xpath expr="//field[@name='work_location_id']" position="after">
                <label for="user_id" />
                <div>
                    <field name="user_id" options="{'no_create': True}" class="oe_inline" />
                    <button string="Create User"
                        name="create_user_from_empoyee"
                        type="object"
                        attrs="{'invisible': [('user_id', '!=', False)]}"
                        groups="hr.group_hr_manager"
                        class="oe_highlight oe_inline"
                    />
                </div>
            </xpath>

            <xpath expr="//field[@name='coach_id']" position="replace">
                <field name="branch_id" options="{'no_create': True}" required="1" />
                <field name="qualification_id" options="{'no_create': True}" />
            </xpath>

            <xpath expr="//field[@name='passport_id']" position="after">
                <field name="passport_type" />
                <field name="passport_series" />
                <field name="passport_issue_date" />
                <field name="passport_issue_by" />
            </xpath>

            <xpath expr="//field[@name='work_email']" position="after">
                <field name="entry_date" />
                <field name="trainee_start_date" />
                <field name="personal_id" string="ID" />
            </xpath>

            <xpath expr="//field[@name='lang']" position="after">
                <field name="hobbies" />
            </xpath>

            <xpath expr="//header/button[1]" position="replace"></xpath>

            <xpath expr="//header" position="inside">
                <button type="object" name="assess_employee" string="Assess Employee"
                    class="oe_highlight" />

                <button name="asign_survey" type="object" string="Assign Survey"
                    class="oe_highlight" />
                <!-- <button type="object" name="view_employee_card" string="View Card"
                class="oe_highlight" /> -->
                <!-- <button type="object" name="update_job_titles" string="Update Job Titles"
                groups="base.group_no_one" /> -->
                <!-- <button type="object" name="import_employee_data" string="Import Employees"
                class="oe_highlight" groups="base.group_no_one" /> -->
                <!-- <button type="object" name="import_employee_data2" string="Import Employees"
                class="oe_highlight" groups="base.group_no_one" /> -->
                <!-- <button type="object" name="import_employee_black_list"
                    string="Import
                Employee Black List" class="oe_highlight"
                    groups="base.group_no_one"
                /> -->
            </xpath>

            <xpath expr="//field[@name='bank_account_id']" position="replace"></xpath>
            <xpath expr="//label[@for='km_home_work']" position="replace"></xpath>
            <xpath expr="//div[@name='div_km_home_work']" position="replace"></xpath>

            <xpath expr="//page[@name='hr_settings']" position="after">
                <page name="apprisals" string="Apprisals/Payment Rate"
                    groups="survey.group_survey_user">
                    <group string="Payment Rate">
                        <group>
                            <field name="payment_rate" />
                        </group>
                        <group>
                            <field name="wage_rate_min" />
                            <field name="wage_rate_max" />
                        </group>
                    </group>
                    <group string="Apprisals">
                        <field name="response_ids" nolabel="1">
                            <tree create="0" edit="0">
                                <field name="is_certificate" invisible="1" />
                                <field name="survey_id" />
                                <field name="partner_id" string="Appraiser" />
                                <field name="scoring_percentage" />
                                <field name="scoring_total" />
                                <field name="scoring_success" />
                                <button name="certification" type="button" disabled="disabled"
                                    icon="fa-trophy" title="Certification"
                                    aria-label="Certification"
                                    attrs="{'invisible': [('is_certificate', '=', False)]}" />

                                <field name="state" widget="badge" />

                                <button string="Proceed Survey" name="proceed_survey" type="object"
                                    class="oe_highlight"
                                    attrs="{'invisible': ['|', ('state', '=', 'done'), ('is_certificate', '=', True)]}" />
                                <button string="See Results" name="see_results" type="object"
                                    class="oe_highlight"
                                    attrs="{'invisible': [('state', '!=', 'done')]}" />
                            </tree>
                            <form>
                                <group>
                                    <field name="survey_id" readonly="1" />
                                    <field name="partner_id" string="Appraiser" readonly="1" />
                                    <field name="scoring_percentage" readonly="1" />
                                    <field name="scoring_total" readonly="1" />
                                    <field name="scoring_success" readonly="1" />
                                    <field name="state" readonly="1" />
                                </group>

                            </form>
                        </field>
                    </group>
                </page>
                <page name="cloth" string="Cloth">
                    <group>
                        <field name="tshirt_size" />
                        <field name="pants_size" />
                    </group>
                </page>
                <page name="remark" string="Remarks">
                    <field name="employee_remark_ids">
                        <tree editable="bottom">
                            <field name="assigment_date" />
                            <field name="description" />
                        </tree>
                    </field>
                </page>
                <page name="achievement" string="Achievements">
                    <field name="employee_achievement_ids">
                        <tree editable="bottom">
                            <field name="assigment_date" />
                            <field name="description" />
                        </tree>
                    </field>
                </page>
            </xpath>

            <xpath expr="//page[@name='hr_settings']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//group[@name='identification_group']" position="replace"></xpath>
            <xpath expr="//group[@name='managers']" position="replace">
                <group name="source" string="Source">
                    <field name="source_id" />
                </group>
                <group name="training_date" string="Training Period">
                    <group>
                        <field name="training_start_date" />
                        <field name="mentor_id" options="{'no_create': True}" />
                    </group>
                    <group>
                        <field name="training_end_date" />
                    </group>
                </group>
                <group name="functional_duty" string="Functional Duty">
                    <field name="functional_duty" />
                </group>
            </xpath>
        </field>
    </record>

    <record id="hr_view_employee_form_inherit_group_hr_manager" model="ir.ui.view">
        <field name="name">hr.employee.view_employee_form_inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="groups_id" eval="[(6, 0, [ref('hr.group_hr_manager')])]" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='department_id']" position="replace">
                <field name="department_id" options="{'no_create': True}" required="1" />
            </xpath>
        </field>
    </record>

    <record id="hr_employee_view_form_inherit" model="ir.ui.view">
        <field name="name">hr.employee.hr_employee_view_form_inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_skills.hr_employee_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('row')]" position="before">
                <div class="row">
                    <div class="col-lg-12">
                        <separator string="PDF Resumé" />
                        <label for="resume_pdf" />
                        <field name="resume_pdf" />
                    </div>
                </div>
                <div class="o_horizontal_separator">Detailed Resume/Skills</div>
            </xpath>
        </field>
    </record>

    <record id="hr_gamification_hr_hr_employee_view_form" model="ir.ui.view">
        <field name="name">hr_gamification.hr_hr_employee_view_form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_gamification.hr_hr_employee_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='received_badges']" position="replace"></xpath>
        </field>
    </record>

    <record id="hr_kanban_view_employees" model="ir.ui.view">
        <field name="name">hr.employee.hr_kanban_view_employees_inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.hr_kanban_view_employees" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='avatar_128']" position="replace">
                <field name="avatar_128" widget="image"
                    class="o_kanban_image_fill_left"
                    options="{'background': true, 'preventClicks': false}" />
            </xpath>
            <xpath expr="//kanban" position="inside">
                <field name="assessed" />
                <field name="employee_type" />
            </xpath>
            <xpath expr="//div[hasclass('o_hr_kanban_record')]" position="attributes">
                <attribute name="t-attf-style">background-color:{{record.employee_type.raw_value ==
                    'trainee' ? 'rgba(244,171,2,0.2)' : ''}};</attribute>
            </xpath>
            <xpath expr="//div[hasclass('o_kanban_record_headings')]" position="inside">
                <div class="row">
                    <div class="col-12">
                        <span class="font-weight-bold">Assessed: </span>
                        <t t-if="record.assessed.raw_value == 'yes'">
                            <span class="badge badge-success">Yes</span>
                        </t>
                        <t t-if="record.assessed.raw_value == 'no'">
                            <span class="badge badge-warning">No</span>
                        </t>

                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <span class="font-weight-bold"> ID: <field name="personal_id" />
                        </span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <span class="font-weight-bold">Employee Type: </span>
                        <t t-if="record.employee_type.raw_value != 'trainee'">
                            <span class="badge badge-success">
                                <field name="employee_type" />
                            </span>
                        </t>
                        <t t-if="record.employee_type.raw_value == 'trainee'">
                            <span class="badge badge-warning">
                                <field name="employee_type" />
                            </span>
                        </t>

                    </div>
                </div>
            </xpath>

            <xpath expr="//div[hasclass('oe_kanban_bottom_right')]" position="inside">
                <button class="btn btn-link" style="padding: 0px; margin-left: 5px;"
                    name="open_employee_edit_view" type="object">
                    <i class="fa fa-edit" style="font-size: 16px;" />
                </button>
            </xpath>
        </field>
    </record>

    <record id="view_employee_tree" model="ir.ui.view">
        <field name="name">hr.employee.view_employee_tree_inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <header>
                    <button name="asign_survey" type="object" string="Assign Survey"
                        class="oe_highlight" />
                </header>
            </xpath>
            <xpath expr="//field[@name='activity_ids']" position="before">
                <field name="assessed" widget="badge" decoration-warning="assessed == 'no'"
                    decoration-success="assessed == 'yes'" />
                <field name="source_id" optional="True" />
            </xpath>
            <xpath expr="//field[@name='parent_id']" position="after">
                <button name="open_employee_edit_view" type="object" icon="fa-edit" title="Edit" />
            </xpath>
        </field>
    </record>

    <record id="employee_view_search" model="ir.ui.view">
        <field name="name">hr.employee.view.search</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_filter" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="employee_type" />
                <field name="branch_id" />
                <field name="qualification_id" />
                <field name="mobile_phone" string="Phone"
                    filter_domain="['|', ('mobile_phone', 'ilike', self), ('work_phone', 'ilike', self)]" />
                <field name="work_email" string="Email"
                    filter_domain="[('work_email', 'ilike', self)]" />
                <field name="department_id" />
                <field name="mentor_id" />
            </xpath>

            <xpath expr="//filter[@name='message_needaction']" position="replace"></xpath>

            <xpath expr="//filter[@name='inactive']" position="after">
                <separator />
                <filter string="Duplicates" name="has_dublicate"
                    domain="[('has_dublicate', '=', True)]" />
                <separator />
                <filter string="Employee" name="employee_type_employee"
                    domain="[('employee_type', '=', 'employee')]" />
                <filter string="Student" name="employee_type_student"
                    domain="[('employee_type', '=', 'student')]" />
                <filter string="Trainee" name="employee_type_trainee"
                    domain="[('employee_type', '=', 'trainee')]" />
                <filter string="Contractor" name="employee_type_contractor"
                    domain="[('employee_type', '=', 'contractor')]" />
                <filter string="Freelance" name="employee_type_freelance"
                    domain="[('employee_type', '=', 'freelance')]" />
            </xpath>

            <xpath expr="//filter[@name='group_manager']" position="after">
                <filter name="branch_id" string="Branch" domain="[]"
                    context="{'group_by': 'branch_id'}" />
                <filter name="qualification_id" string="Qualification" domain="[]"
                    context="{'group_by': 'qualification_id'}" />
                <filter name="employee_type" string="Employee Type" domain="[]"
                    context="{'group_by': 'employee_type'}" />
                <separator />
                <filter name="departure_reason" string="Dismissal Reason" domain="[]"
                    context="{'group_by': 'departure_reason_id'}" />
                <separator />
            </xpath>
            <xpath expr="//searchpanel/field[@name='department_id']" position="before">
                <field name="branch_id" icon="fa-users" enable_counters="1" />
            </xpath>
        </field>
    </record>

    <record id="filter_and_group_by_dismissal_reason" model="ir.filters">
        <field name="name">Dismissal Reason</field>
        <field name="model_id">hr.employee</field>
        <field name="domain">[('active', '=', False)]</field>
        <field name="user_id" eval="False" />
        <field name="context">{'group_by': ['departure_reason_id']}</field>
    </record>

    <record id="hr.act_employee_from_department" model="ir.actions.act_window">
        <field name="context">{
            "searchpanel_default_department_id": active_id
            }
        </field>
    </record>

    <record id="employee_payment_rate_view_tree" model="ir.ui.view">
        <field name="name">employee_payment_rate.view.tree</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <tree editable="bottom" create="0" delete="0"
                decoration-success="payment_rate &gt;= wage_rate_min or payment_rate &lt;= wage_rate_max"
                decoration-danger="payment_rate &gt; wage_rate_max or payment_rate &lt; wage_rate_min">
                <field name="name" readonly="1" />
                <field name="payment_rate" />
                <field name="wage_rate_min" />
                <field name="wage_rate_max" />
                <field name="last_response_id" optional="show" />
                <field name="last_response_scoring" optional="show" />
                <field name="department_id" readonly="1" optional="hide" />
                <field name="job_id" readonly="1" optional="show" />
                <field name="parent_id" readonly="1" optional="hide" />
            </tree>
        </field>
    </record>

    <record id="employee_payment_rate_action" model="ir.actions.act_window">
