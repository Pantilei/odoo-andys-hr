<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="staff_of_workers_report_form" model="ir.ui.view">
        <field name="name">staff_of_workers_report.view.form</field>
        <field name="model">restaurant_hr.staff_of_workers_report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h2>
                            <field name="name" readonly="1" />
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="start_date" />
                        </group>
                        <group>
                            <field name="end_date" />
                        </group>
                    </group>
                    <group>
                        <field name="department_id" options="{'no_create': True}" />
                        <field name="branch_id" options="{'no_create': True}" />
                    </group>
                    <group>
                        <field name="staff_line_ids" nolabel="1">
                            <tree create="0" edit="0" delete="0">
                                <field name="department_id" />
                                <field name="staff_count" sum="Total staff" />
                                <field name="staff_actual_count" sum="Total actual staff" />
                                <field name="open_position_count" sum="Total open position" />
                                <field name="trainee_count" sum="Total trainee" />
                                <field name="dismissed_count" sum="Total dismissed" />
                                <field name="hired_count" sum="Total hired" />
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="staff_of_workers_report_action" model="ir.actions.act_window">
        <field name="name">Staff of Workers Report</field>
        <field name="res_model">restaurant_hr.staff_of_workers_report</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="domain">[]</field>
        <field name="context">{"form_view_initial_mode": "edit"}</field>
    </record>

</odoo>